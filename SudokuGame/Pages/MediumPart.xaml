<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SudokuGame.Pages.MediumPart"
             Title="MediumPart"
             BackgroundColor="#0D1B2A">
    
    <VerticalStackLayout Padding="20" Spacing="25">

        <!-- Header Section -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="40">
            <Label Text="CURRENT STREAK: 0"
               FontSize="16"
               TextColor="#A9D6E5"
               FontAttributes="Bold" />
            <Label Text="ALL TIME: 0"
               FontSize="16"
               TextColor="#A9D6E5"
               FontAttributes="Bold" />
        </HorizontalStackLayout>

        <!-- Hearts (Lives) -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
            <Label Text="❤️" FontSize="26" />
            <Label Text="❤️" FontSize="26" />
            <Label Text="❤️" FontSize="26" />
        </HorizontalStackLayout>

        <!-- Sudoku Grid -->
        <Grid x:Name="SudokuGrid"
          WidthRequest="380"
          HeightRequest="380"
          Padding="5"
          BackgroundColor="#1B263B"
          HorizontalOptions="Center"
          VerticalOptions="Center">
        </Grid>

        <!-- Bottom Buttons -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="15" Padding="10">
            <Button Text="Undo" WidthRequest="90" HeightRequest="45" BackgroundColor="#1B4965" TextColor="White" CornerRadius="20" FontAttributes="Bold"/>
            <Button Text="Erase" WidthRequest="90" HeightRequest="45" BackgroundColor="#1B4965" TextColor="White" CornerRadius="20" FontAttributes="Bold"/>
            <Button Text="Notes" WidthRequest="90" HeightRequest="45" BackgroundColor="#1B4965" TextColor="White" CornerRadius="20" FontAttributes="Bold"/>
            <Button Text="Hint" WidthRequest="90" HeightRequest="45" BackgroundColor="#1B4965" TextColor="White" CornerRadius="20" FontAttributes="Bold"/>
        </HorizontalStackLayout>

        <!-- Number Choices -->
        <Grid ColumnSpacing="10" RowSpacing="10" Padding="5" HorizontalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Single Row: 1–9 -->
            <Button Grid.Row="0" Grid.Column="0" Text="1" WidthRequest="30" HeightRequest="60" FontSize="24" BackgroundColor="#1E6091" TextColor="White" CornerRadius="15"/>
            <Button Grid.Row="0" Grid.Column="1" Text="2" WidthRequest="30" HeightRequest="60" FontSize="24" BackgroundColor="#1E6091" TextColor="White" CornerRadius="15"/>
            <Button Grid.Row="0" Grid.Column="2" Text="3" WidthRequest="30" HeightRequest="60" FontSize="24" BackgroundColor="#1E6091" TextColor="White" CornerRadius="15"/>
            <Button Grid.Row="0" Grid.Column="3" Text="4" WidthRequest="30" HeightRequest="60" FontSize="24" BackgroundColor="#1E6091" TextColor="White" CornerRadius="15"/>
            <Button Grid.Row="0" Grid.Column="4" Text="5" WidthRequest="30" HeightRequest="60" FontSize="24" BackgroundColor="#1E6091" TextColor="White" CornerRadius="15"/>
            <Button Grid.Row="0" Grid.Column="5" Text="6" WidthRequest="30" HeightRequest="60" FontSize="24" BackgroundColor="#1E6091" TextColor="White" CornerRadius="15"/>
            <Button Grid.Row="0" Grid.Column="6" Text="7" WidthRequest="30" HeightRequest="60" FontSize="24" BackgroundColor="#1E6091" TextColor="White" CornerRadius="15"/>
            <Button Grid.Row="0" Grid.Column="7" Text="8" WidthRequest="30" HeightRequest="60" FontSize="24" BackgroundColor="#1E6091" TextColor="White" CornerRadius="15"/>
            <Button Grid.Row="0" Grid.Column="8" Text="9" WidthRequest="30" HeightRequest="60" FontSize="24" BackgroundColor="#1E6091" TextColor="White" CornerRadius="15"/>
        </Grid>

    </VerticalStackLayout>
</ContentPage>