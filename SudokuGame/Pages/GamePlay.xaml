<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SudokuGame.Pages.GamePlay"
             BackgroundColor="#90caf9">

    <VerticalStackLayout Padding="20" Spacing="25">

        <Grid ColumnDefinitions="Auto, 40, Auto"
              HorizontalOptions="Center"
              VerticalOptions="Start"
              Margin="0,10,0,0"
              RowSpacing="0">       

            <!-- CURRENT STREAK BOX -->
            <Frame
                Grid.Column="0"
                BackgroundColor="#0d47a1"
                CornerRadius="15"
                HasShadow="True"
                WidthRequest="150"
                HeightRequest="70"
                Padding="0"
                BorderColor="#0D2C64"
                HorizontalOptions="Center"
                VerticalOptions="Center">

                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="CURRENT STREAK"
                   FontSize="12"
                   FontFamily="Poppins"
                   FontAttributes="Bold"
                   TextColor="#ffeb3b"
                   HorizontalOptions="Center" />
                    <Label Text="0"
                   FontSize="22"
                   FontFamily="Poppins"
                   FontAttributes="Bold"
                   TextColor="#ffeb3b"
                   HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- ALL TIME BOX WITH CROWN -->
            <Grid Grid.Column="2"
          HorizontalOptions="Center"
          VerticalOptions="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Crown Icon -->
                <Image Source="crown_icon.png"
               Grid.Row="0"
               HorizontalOptions="Center"
               Margin="0,0,0,-10"
               HeightRequest="22"
               WidthRequest="22"/>

                <!-- All Time Box -->
                <Frame
            Grid.Row="1"
            BackgroundColor="#0d47a1"
            CornerRadius="15"
            HasShadow="True"
            WidthRequest="150"
            HeightRequest="70"
            Padding="0"
            BorderColor="#0D2C64"
            HorizontalOptions="Center"
            VerticalOptions="Center">

                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="ALL TIME"
                       FontSize="12"
                       FontFamily="Poppins"
                       FontAttributes="Bold"
                       TextColor="#ffeb3b"
                       HorizontalOptions="Center" />
                        <Label Text="0"
                       FontSize="22"
                       FontFamily="Poppins"
                       FontAttributes="Bold"
                       TextColor="#ffeb3b"
                       HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>
        </Grid>


        <FlexLayout FlowDirection="LeftToRight" JustifyContent="SpaceEvenly" AlignContent="Center" AlignItems="Center">
            <Label Text="Mistakes: 0/3" FontSize="15" FontFamily="Poppins"  TextColor="Black"/>
            <Label Text="Easy"  FontSize="15" FontFamily="Poppins"  TextColor="Black" Margin="-50,0,-30, 0"/>
            <Label Text="Score: " FontSize="15" FontFamily="Poppins"  TextColor="Blue" FontAttributes="Bold"/>
        </FlexLayout>

        <Grid x:Name="SudokuGrid"
              WidthRequest="380"
              HeightRequest="380"
              Padding="4"
              BackgroundColor="Black"
              HorizontalOptions="Center"
              VerticalOptions="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style TargetType="Border">
                    <Setter Property="Stroke" Value="#B0B0B0" />
                    <Setter Property="StrokeThickness" Value="0.5" />
                    <Setter Property="Background" Value="White" />
                </Style>

                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="30"/>
                    <Setter Property="FontAttributes" Value="Bold"/>
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="TextColor" Value="Black"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="CornerRadius" Value="0"/>
                </Style>
            </Grid.Resources>

            <Border Grid.Row="0" Grid.Column="0"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="0" Grid.Column="1"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="0" Grid.Column="2"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="0" Grid.Column="3"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="0" Grid.Column="4"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="0" Grid.Column="5"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="0" Grid.Column="6"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="0" Grid.Column="7"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="0" Grid.Column="8"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="1" Grid.Column="0"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="1" Grid.Column="1"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="1" Grid.Column="2"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="1" Grid.Column="3"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="1" Grid.Column="4"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="1" Grid.Column="5"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="1" Grid.Column="6"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="1" Grid.Column="7"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="1" Grid.Column="8"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="2" Grid.Column="0"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="2" Grid.Column="1"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="2" Grid.Column="2"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="2" Grid.Column="3"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="2" Grid.Column="4"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="2" Grid.Column="5"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="2" Grid.Column="6"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="2" Grid.Column="7"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="2" Grid.Column="8"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="3" Grid.Column="0"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="3" Grid.Column="1"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="3" Grid.Column="2"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="3" Grid.Column="3"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="3" Grid.Column="4"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="3" Grid.Column="5"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="3" Grid.Column="6"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="3" Grid.Column="7"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="3" Grid.Column="8"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="4" Grid.Column="0"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="4" Grid.Column="1"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="4" Grid.Column="2"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="4" Grid.Column="3"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="4" Grid.Column="4"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="4" Grid.Column="5"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="4" Grid.Column="6"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="4" Grid.Column="7"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="4" Grid.Column="8"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="5" Grid.Column="0"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="5" Grid.Column="1"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="5" Grid.Column="2"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="5" Grid.Column="3"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="5" Grid.Column="4"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="5" Grid.Column="5"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="5" Grid.Column="6"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="5" Grid.Column="7"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="5" Grid.Column="8"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="6" Grid.Column="0"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="6" Grid.Column="1"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="6" Grid.Column="2"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="6" Grid.Column="3"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="6" Grid.Column="4"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="6" Grid.Column="5"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="6" Grid.Column="6"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="6" Grid.Column="7"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="6" Grid.Column="8"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="7" Grid.Column="0"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="7" Grid.Column="1"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="7" Grid.Column="2"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="7" Grid.Column="3"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="7" Grid.Column="4"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="7" Grid.Column="5"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="7" Grid.Column="6"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="7" Grid.Column="7"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="7" Grid.Column="8"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="8" Grid.Column="0"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="8" Grid.Column="1"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="8" Grid.Column="2"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="8" Grid.Column="3"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="8" Grid.Column="4"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="8" Grid.Column="5"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="8" Grid.Column="6"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="8" Grid.Column="7"> <Button Clicked="GridClick"/> </Border>
            <Border Grid.Row="8" Grid.Column="8"> <Button Clicked="GridClick"/> </Border>

            <BoxView Grid.Row="2" Grid.ColumnSpan="9"
                     HeightRequest="3"
                     BackgroundColor="Black"
                     VerticalOptions="End" />
            <BoxView Grid.Row="5" Grid.ColumnSpan="9"
                     HeightRequest="3"
                     BackgroundColor="Black"
                     VerticalOptions="End" />
            <BoxView Grid.Column="2" Grid.RowSpan="9"
                     WidthRequest="3"
                     BackgroundColor="Black"
                     HorizontalOptions="End" />
            <BoxView Grid.Column="5" Grid.RowSpan="9"
                     WidthRequest="3"
                     BackgroundColor="Black"
                     HorizontalOptions="End" />
        </Grid>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="15" Padding="10">
            <Button Text="Undo" WidthRequest="90" HeightRequest="45"
                    BackgroundColor="#0d47a1" TextColor="White" CornerRadius="15"
                    FontAttributes="Bold">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="8" Offset="4,4"/>
                </Button.Shadow>
            </Button>

            <Button Text="Erase" WidthRequest="90" HeightRequest="45"
                    BackgroundColor="#0d47a1" TextColor="White" CornerRadius="15"
                    FontAttributes="Bold">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="8" Offset="4,4"/>
                </Button.Shadow>
            </Button>

            <Button Text="Notes" WidthRequest="90" HeightRequest="45"
                    BackgroundColor="#0d47a1" TextColor="White" CornerRadius="15"
                    FontAttributes="Bold">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="8" Offset="4,4"/>
                </Button.Shadow>
            </Button>

            <Button Text="Hint" WidthRequest="90" HeightRequest="45"
                    BackgroundColor="#0d47a1" TextColor="White" CornerRadius="15"
                    FontAttributes="Bold">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="8" Offset="4,4"/>
                </Button.Shadow>
            </Button>
        </HorizontalStackLayout>

        <!-- Number Choices -->
        <Grid ColumnSpacing="10" RowSpacing="10" Padding="5" HorizontalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Number Buttons 1–9 with Shadows -->
            <Button Clicked="Numpad" Grid.Row="0" Grid.Column="0" Text="1" WidthRequest="30" HeightRequest="60"
                    FontSize="24" BackgroundColor="#2196f3" TextColor="White" CornerRadius="5">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="4" Offset="4,4"/>
                </Button.Shadow>
            </Button>
            <Button Clicked="Numpad" Grid.Row="0" Grid.Column="1" Text="2" WidthRequest="30" HeightRequest="60"
                    FontSize="24" BackgroundColor="#2196f3" TextColor="White" CornerRadius="5">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="4" Offset="4,4"/>
                </Button.Shadow>
            </Button>
            <Button Clicked="Numpad" Grid.Row="0" Grid.Column="2" Text="3" WidthRequest="30" HeightRequest="60"
                    FontSize="24" BackgroundColor="#2196f3" TextColor="White" CornerRadius="5">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="4" Offset="4,4"/>
                </Button.Shadow>
            </Button>
            <Button Clicked="Numpad" Grid.Row="0" Grid.Column="3" Text="4" WidthRequest="30" HeightRequest="60"
                    FontSize="24" BackgroundColor="#2196f3" TextColor="White" CornerRadius="5">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="4" Offset="4,4"/>
                </Button.Shadow>
            </Button>
            <Button Clicked="Numpad" Grid.Row="0" Grid.Column="4" Text="5" WidthRequest="30" HeightRequest="60"
                    FontSize="24" BackgroundColor="#2196f3" TextColor="White" CornerRadius="5">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="4" Offset="4,4"/>
                </Button.Shadow>
            </Button>
            <Button Clicked="Numpad" Grid.Row="0" Grid.Column="5" Text="6" WidthRequest="30" HeightRequest="60"
                    FontSize="24" BackgroundColor="#2196f3" TextColor="White" CornerRadius="5">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="4" Offset="4,4"/>
                </Button.Shadow>
            </Button>
            <Button Clicked="Numpad" Grid.Row="0" Grid.Column="6" Text="7" WidthRequest="30" HeightRequest="60"
                    FontSize="24" BackgroundColor="#2196f3" TextColor="White" CornerRadius="5">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="4" Offset="4,4"/>
                </Button.Shadow>
            </Button>
            <Button Clicked="Numpad" Grid.Row="0" Grid.Column="7" Text="8" WidthRequest="30" HeightRequest="60"
                    FontSize="24" BackgroundColor="#2196f3" TextColor="White" CornerRadius="5">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="4" Offset="4,4"/>
                </Button.Shadow>
            </Button>
            <Button Clicked="Numpad" Grid.Row="0" Grid.Column="8" Text="9" WidthRequest="30" HeightRequest="60"
                    FontSize="24" BackgroundColor="#2196f3" TextColor="White" CornerRadius="5">
                <Button.Shadow>
                    <Shadow Brush="#000000" Opacity="0.4" Radius="4" Offset="4,4"/>
                </Button.Shadow>
            </Button>
        </Grid>

    </VerticalStackLayout>

</ContentPage>